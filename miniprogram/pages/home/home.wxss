/* pages/home/home.wxss */
.home-view {
  background-color: #870000;
  display: flex;
  width: 100%;
  height: 400rpx;
  align-items: center;
  flex-direction: column;
}
.home-view-image {
  display: flex;
  width: 220rpx;
  height: 220rpx;
  margin-top: 50rpx;
  justify-content: center;
}
.home-view-text {
  display: flex;
  flex-direction: column;
  color: #ffffff;
  font-size: 33rpx;
  margin-top: 30rpx;
}

.button-view {
  justify-content: center;
  display: flex;
  flex-direction: column;
}
.buttoncolor {
  background-color: #870000;
  font-size: 29rpx;
  width: 550rpx;
  height: 80rpx;
  color: #ffffff;
  border-radius: 13rpx;
  margin-top: 30rpx;
  justify-content: center;
}
.reset-button {
  background-color: #ffffff;
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  opacity: 0;
}
.button-view-text {
  color: #870000;
  margin-top: 20rpx;
  text-align: center;
}
