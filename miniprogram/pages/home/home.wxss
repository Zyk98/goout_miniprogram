.home-view {
  background-color: #870000;
  display: flex;
  width: 100%;
  height: 440rpx;
  align-items: center;
  flex-direction: column;
}
.home-view-image {
  display: flex;
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
  justify-content: center;
}
.home-view-text {
  display: flex;
  flex-direction: column;
  color: #FFFFFF;
  font-size: 33rpx;
  margin-top: 50rpx;
}

.button-view {
  justify-content: center;
  display: flex;
  flex-direction: column;
}
.button-view-button {
  background-color: #870000;
  font-size: 29rpx;
  width: 550rpx;
  height: 80rpx;
  color: #FFFFFF;
  border-radius: 13rpx;
  margin-top: 30rpx;
  justify-content: center;
}
.button-view-text {
  color: #870000;
  margin-top: 20rpx;
  text-align: center;
}
